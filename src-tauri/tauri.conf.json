{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "media-viewer",
  "version": "0.1.0",
  "identifier": "com.github.matthiasbalke.media-viewer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "media-viewer",
        "width": 800,
        "height": 600,
        "visible": false,
        "backgroundColor": "#09090bff",
        "transparent": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: http://asset.localhost asset: https://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'",
        "connect-src": "'self' ipc: http://ipc.localhost ipc: https://ipc.localhost"
      },
      "dangerousDisableAssetCspModification": true,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$HOME/.mv/**",
            "$HOME/**"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY1OUU2OTk2RDg3NjFGNjMKUldSakgzYllsbW1lWmRYd1RPTzg2Q0pFaktVNXByaExXWldVYXorV055NjE5akhrem11SGpPV2UK",
      "endpoints": [
        "https://github.com/matthiasbalke/media-viewer/releases/latest/download/latest.json"
      ]
    }
  }
}