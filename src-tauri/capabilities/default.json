{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "/**/.mv-thumbnails/**"
        }
      ]
    }
  ]
}