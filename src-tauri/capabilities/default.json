{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "opener:allow-open-path",
    "store:default",
    "dialog:allow-open",
    "core:window:allow-show",
    "window-state:default",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}